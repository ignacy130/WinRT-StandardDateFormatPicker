<Page x:Class="App2.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:App2"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <StackPanel Margin="0,80,0,0" Orientation="Horizontal">
            <local:MyDatePicker x:Name="DatPicker" />
            <TextBlock Text="{Binding Date.Day, ElementName=DatPicker}" />
            <TextBlock Text="{Binding Date.Month, ElementName=DatPicker}" />
            <TextBlock Text="{Binding Date.Year, ElementName=DatPicker}" />
        </StackPanel>
    </Grid>
</Page>
